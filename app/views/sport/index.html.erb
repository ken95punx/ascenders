<form>
  <div class="row">
    <div id="main" class="col-sm-9">
      <div class="search-box sp-only">
        <div class="search-form">
          <input type="text" name="player" placeholder="キーワードを入力（選手検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->
      </div><!-- /.search-box -->

      <div class="recent-news-box">
        <p class="head-title">競技一覧<%= image_tag("/images/common/head_title_article.png", alt:"RECENT NEWS", class:"new-player-title") %></p><!-- /.head-title -->

        <!-- new_article_list -->
        <div class="article-list">
          <ul>
            <% @sports.each do |sport| %>
              <li>
                <%= link_to("#") do %>
                  <% if sport.image? %>
                    <%= image_tag(sport.image.url) %>
                  <% else %>
                    <%= image_tag("/images/common/default_sport_thum.jpg") %>
                  <% end %>

                  <span class="name"><%= sport.name %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div><!-- /.article-list -->
        <!-- /new_article-list -->
      </div><!-- /.recent-news-box -->
    </div><!-- /#main -->

    <div id="side" class="col-sm-3">
      <div class="search-box pc-only">
        <div class="search-form">
          <input type="text" name="player" placeholder="キーワードを入力（選手検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->
      </div><!-- /.search-box -->

      <div class="pop-movie-box">

      </div><!-- /.pop-movie-box -->

      <div class="pop-news-box">

      </div><!-- /.pop-news-box -->
    </div><!-- /#side -->
  </div><!-- /.row -->
</form>
