<%= search_form_for @search, url:player_path do |f| %>
  <div class="row">
    <div id="main" class="col-sm-9">
      <div class="search-box sp-only">
        <div class="search-form">
          <div class="form-group">
            <%= f.text_field :name_or_place_birth_or_alma_mater_or_league_school_or_team_or_hiragana_name_or_katakana_name_cont, placeholder: 'キーワードを入力（選手検索）', class: 'form-control' %>
          </div><!-- /.form-group -->
        </div><!-- /.search-form -->

        <div class="submit-form">
          <div><%= f.submit '検索', class: 'search-btn' %><i class="glyphicon glyphicon-search"></i></div>
        </div><!-- /.submit-form -->
      </div><!-- /.search-box -->

      <div class="sport-box">
        <p class="head-title">競技一覧<%= image_tag("/images/common/head_title_article.png", alt:"SPORTS", class:"sports-list-title") %></p><!-- /.head-title -->

        <div class="sport-list">
          <ul>
            <% @sports.each do |sport| %>
              <li>
                <%= link_to player_path(@search, :'q[sport_id_eq]' => "#{sport.id}") do %>
                  <% if sport.image? %>
                    <%= image_tag(sport.image.url) %>
                  <% else %>
                    <%= image_tag("/images/common/default_sport_thum.jpg") %>
                  <% end %>

                  <span class="name"><%= sport.name %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div><!-- /.sports-list -->
      </div><!-- /.sport-box -->
    </div><!-- /#main -->

    <div id="side" class="col-sm-3">
      <div class="search-box pc-only">
        <div class="search-form">
          <div class="form-group">
            <%= f.text_field :name_or_place_birth_or_alma_mater_or_league_school_or_team_or_hiragana_name_or_katakana_name_cont, placeholder: 'キーワードを入力（選手検索）', class: 'form-control' %>
          </div><!-- /.form-group -->
        </div><!-- /.search-form -->

        <div class="submit-form">
          <div><%= f.submit '検索', class: 'search-btn' %><i class="glyphicon glyphicon-search"></i></div>
        </div><!-- /.submit-form -->
      </div><!-- /.search-box -->

      <div class="pop-movie-box">

      </div><!-- /.pop-movie-box -->

      <div class="pop-news-box">

      </div><!-- /.pop-news-box -->
    </div><!-- /#side -->
  </div><!-- /.row -->
<% end %>
