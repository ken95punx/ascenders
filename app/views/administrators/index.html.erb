<h1>管理画面</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
     <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @administrators.each do |administrator| %>
      <tr>
        <td><%= administrator.name %></td>
        <% if @current_administrator == @admin %> <!-- セッションユーザーと管理人が同一の場合表示 -->
          <td><%= link_to '削除', administrator, method: :delete, data: { confirm: '削除してもいいですか?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @current_administrator == @admin %> <!-- セッションユーザーと管理人が同一の場合表示 -->
  <%= link_to '新規登録', new_administrator_path %>
<% end %>