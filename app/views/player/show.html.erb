<form>
  <div class="row">
    <div id="main" class="col-sm-9">
      <div class="search-box sp-only">
        <div class="search-form">
          <input type="text" name="player" placeholder="キーワードを入力（選手検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->

        <div class="select-form">
          <select name="sport">
            <option value="すべて">すべて</option>
            <option value="バスケットボール">バスケットボール</option>
            <option value="バレーボール">バレーボール</option>
            <option value="テニス">テニス</option>
            <option value="ラグビー">ラグビー</option>
            <option value="サッカー">サッカー</option>
            <option value="野球">野球</option>
            <option value="ゴルフ">ゴルフ</option>
            <option value="格闘技">格闘技</option>
            <option value="水泳">水泳</option>
            <option value="ハンドボール">ハンドボール</option>
            <option value="相撲">相撲</option>
            <option value="柔道">柔道</option>
            <option value="陸上">陸上</option>
            <option value="卓球">卓球</option>
            <option value="バドミントン">バドミントン</option>
            <option value="武術">武術</option>
            <option value="レスリング">レスリング</option>
            <option value="空手">空手</option>
            <option value="剣道">剣道</option>
            <option value="自転車競技">自転車競技</option>
            <option value="モータースポーツ">モータースポーツ</option>
            <option value="ウインタースポーツ">ウインタースポーツ</option>
            <option value="ビーチスポーツ">ビーチスポーツ</option>
            <option value="マリンスポーツ">マリンスポーツ</option>
            <option value="ダンス">ダンス</option>
            <option value="その他">その他</option>
          </select>

          <!-- after popular system
          <select name="order">
            <option value="新着順">新着順</option>
            <option value="人気順">人気順</option>
          </select>
          -->
        </div><!-- /.select-form -->
      </div><!-- /.search-box -->

      <div class="player-detail-box">
        <div class="main-visual-block">
          <p class="head-title"><%= @player.name %></p><!-- /.head-title -->

          <div class="main-visual">
            <% if @player.cover_image? %>
              <%= image_tag(@player.cover_image.url) %>
            <% else %>
              <%= image_tag("/images/common/default_player_profile.jpg") %>
            <% end %>

            <% if @player.profile_image? %>
              <%= image_tag(@player.profile_image.url) %>
            <% else %>
              <%= image_tag("/images/common/default_player_profile.jpg") %>
            <% end %>

            <span class="name"><%= @player.name %></span>
            <span class="sport"><%= @player.sport.name %></span>


          </div><!-- /.main-visual -->
        </div><!-- /.main-visual-block -->

        <div class="movie-block">
          <p class="head-title">選手動画<%= image_tag("/images/common/head_title_article.png", alt:"MOVIE", class:"movie-title") %></p><!-- /.head-title -->

          <div class="player-movie-block">
            <% if @movie %>
              <div class="movie-player">
                  <div class="html"><%= @movie.movie_html.html_safe %></div>
                  <div class="title"><%= @movie.title %></div>
                  <div class="name">
                    <%= link_to("/player/#{@movie.player_id}") do %>
                      <%= @movie.player.name %>
                    <% end %>
                  </div>
              </div><!-- /.movie-player -->

              <!-- new-movie-list -->
              <div class="movie-list">
                <ul>
                  <% @movies.each do |movie| %>
                    <li class="slide">
                      <%= link_to("/player/#{movie.id}", {method: "post", remote: true, id: "movie#{movie.id}"}) do %>
                        <img src="<%= movie.movie_thum %>"  class="thum">
                        <span class="title"><%= movie.title %></span>
                        <span class="name"><%= movie.player.name %></span>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div><!-- /.movie-list -->
              <!-- /new-movie-list -->

              <div class="more-btn">
                <!-- 選手動画一覧に飛ぶ -->
                <%= link_to("もっと見る", "/movie") %><i class="glyphicon glyphicon-chevron-right"></i>
              </div><!-- /.more-btn -->
            <% else %>
            <% end %>
          </div><!-- /.player-movie-block -->
        </div><!-- /.movie-block -->


      </div><!-- /player-detail-box -->


    </div><!-- /#main -->

    <div id="side" class="col-sm-3">
      <div class="search-box pc-only">
        <div class="search-form">
          <input type="text" name="player" placeholder="キーワードを入力（選手検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->

        <div class="select-form">
          <select name="sport">
            <option value="すべて">すべて</option>
            <option value="バスケットボール">バスケットボール</option>
            <option value="バレーボール">バレーボール</option>
            <option value="テニス">テニス</option>
            <option value="ラグビー">ラグビー</option>
            <option value="サッカー">サッカー</option>
            <option value="野球">野球</option>
            <option value="ゴルフ">ゴルフ</option>
            <option value="格闘技">格闘技</option>
            <option value="水泳">水泳</option>
            <option value="ハンドボール">ハンドボール</option>
            <option value="相撲">相撲</option>
            <option value="柔道">柔道</option>
            <option value="陸上">陸上</option>
            <option value="卓球">卓球</option>
            <option value="バドミントン">バドミントン</option>
            <option value="武術">武術</option>
            <option value="レスリング">レスリング</option>
            <option value="空手">空手</option>
            <option value="剣道">剣道</option>
            <option value="自転車競技">自転車競技</option>
            <option value="モータースポーツ">モータースポーツ</option>
            <option value="ウインタースポーツ">ウインタースポーツ</option>
            <option value="ビーチスポーツ">ビーチスポーツ</option>
            <option value="マリンスポーツ">マリンスポーツ</option>
            <option value="ダンス">ダンス</option>
            <option value="その他">その他</option>
          </select>

          <!-- after popular system
          <select name="order">
            <option value="新着順">新着順</option>
            <option value="人気順">人気順</option>
          </select>
          -->
        </div><!-- /.select-form -->
      </div><!-- /.search-box -->

      <div class="pop-movie-box">

      </div><!-- /.pop-movie-box -->

      <div class="pop-news-box">

      </div><!-- /.pop-news-box -->
    </div><!-- /#side -->
  </div><!-- /.row -->
</form>
