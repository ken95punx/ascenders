<form>
  <div class="row">
    <div id="main" class="col-sm-9">
      <div class="search-box sp-only">
        <div class="search-form">
          <input type="text" name="article" placeholder="キーワードを入力（選手検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->

        <div class="select-form">
          <select name="sport">
            <option value="" selected disabled>ジャンル</option>
            <option value="バスケットボール">バスケ</option>
          </select>

          <select name="order">
            <option value="新着順">新着順</option>
            <option value="人気順">人気順</option>
          </select>
        </div><!-- /.select-form -->
      </div><!-- /.search-box -->

      <div class="recent-news-box">
        <p class="head-title">選手一覧<%= image_tag("/images/common/head_title_article.png", alt:"RECENT NEWS", class:"new-player-title") %></p><!-- /.head-title -->

        <!-- new_article_list -->
        <div class="article-list">
          <ul>
            <% @players.each do |player| %>
              <li>
                <%= link_to("/player/#{player.id}") do %>
                  <% if player.profile_image? %>
                    <%= image_tag(player.profile_image.url) %>
                  <% else %>
                    <%= image_tag("/images/common/default_player_profile.jpg") %>
                  <% end %>

                  <span class="name"><%= player.name %></span>
                  <span class="sport"><%= player.sport.name %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
          <%= paginate @players %>
        </div><!-- /.article-list -->
        <!-- /new_article-list -->
      </div><!-- /.recent-news-box -->
    </div><!-- /#main -->

    <div id="side" class="col-sm-3">
      <div class="search-box pc-only">
        <div class="search-form">
          <input type="text" name="player" placeholder="キーワードを入力（選手検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->

        <div class="select-form">
          <select name="sport">
            <option value="" selected disabled>ジャンル</option>
            <option value="バスケットボール">バスケ</option>
          </select>

          <select name="order">
            <option value="新着順">新着順</option>
            <option value="人気順">人気順</option>
          </select>
        </div><!-- /.select-form -->
      </div><!-- /.search-box -->

      <div class="pop-movie-box">

      </div><!-- /.pop-movie-box -->

      <div class="pop-news-box">

      </div><!-- /.pop-news-box -->
    </div><!-- /#side -->
  </div><!-- /.row -->
</form>
