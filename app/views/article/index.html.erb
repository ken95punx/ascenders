<%= search_form_for @search, url:article_path do |f| %>
  <div class="row">
    <div id="main" class="col-sm-9">
      <div class="search-box sp-only">
        <div class="search-form">
          <div class="form-group">
            <%= f.text_field :title_or_player_name_or_player_team_or_player_hiragana_name_or_player_katakana_name_cont, placeholder: 'キーワードを入力（記事検索）', class: 'form-control' %>
          </div><!-- /.form-group -->
        </div><!-- /.search-form -->

        <div class="select-form">
          <%= f.collection_select :sport_id_eq_any, @sports, :id, :name, :prompt => "選択してください", :include_blank => 'すべて' %>
        </div><!-- /.select-form -->


        <div class="submit-form">
          <div><%= f.submit '検索', class: 'search-btn' %><i class="glyphicon glyphicon-search"></i></div>
        </div><!-- /.submit-form -->
      </div><!-- /.search-box -->

      <div class="recent-news-box">
        <p class="head-title">新着記事<%= image_tag("/images/common/head_title_article.png", alt:"RECENT NEWS", class:"new-article-title") %></p><!-- /.head-title -->

        <div class="article-list">
          <% if @result.any? %>
            <ul>
              <% @result.each do |article| %>
                <li>
                  <%= link_to("/article/#{article.id}") do %>
                    <% if article.image_link? %>
                      <%= image_tag("#{article.image_link}", class:"thum") %>
                    <% else %>
                      <%= image_tag("/images/common/default_article_thum.jpg") %>
                    <% end %>
                    <span class="title"><%= article.title %></span>
                    <span class="media"><%= article.media %></span>
                    <span class="published"><%= article.created_at %></span>
                    <span class="name"><%= article.player.name %></span>
                  <% end %>
                </li>
              <% end %>
            </ul>
            <%= paginate @result %>
          <% end %>

          <% if @result.nil? %>
            <ul>
              <% @result.each do |article| %>
                <li>
                  <%= link_to("/article/#{article.id}") do %>
                    <% if article.image_link? %>
                      <%= image_tag("#{article.image_link}", class:"thum") %>
                    <% else %>
                      <%= image_tag("/images/common/default_article_thum.jpg") %>
                    <% end %>
                    <span class="title"><%= article.title %></span>
                    <span class="media"><%= article.media %></span>
                    <span class="published"><%= article.created_at %></span>
                    <span class="name"><%= article.player.name %></span>
                  <% end %>
                </li>
              <% end %>
            </ul>
            <%= paginate @articles %>
          <% end %>
        </div><!-- /.article-list -->
      </div><!-- /.recent-news-box -->
    </div><!-- /#main -->

    <div id="side" class="col-sm-3">
      <div class="search-box pc-only">
        <div class="search-form">
          <div class="form-group">
            <%= f.text_field :title_or_player_name_or_player_team_or_player_hiragana_name_or_player_katakana_name_cont, placeholder: 'キーワードを入力（記事検索）', class: 'form-control' %>
          </div><!-- /.form-group -->
        </div><!-- /.search-form -->

        <div class="select-form">
          <%= f.collection_select :sport_id_eq_any, @sports, :id, :name, :prompt => "選択してください", :include_blank => 'すべて' %>
        </div><!-- /.select-form -->


        <div class="submit-form">
          <div><%= f.submit '検索', class: 'search-btn' %><i class="glyphicon glyphicon-search"></i></div>
        </div><!-- /.submit-form -->
      </div><!-- /.search-box -->

      <div class="pop-movie-box">

      </div><!-- /.pop-movie-box -->

      <div class="pop-news-box">

      </div><!-- /.pop-news-box -->
    </div><!-- /#side -->
  </div><!-- /.row -->
<% end %>
