<form>
  <div class="row">
    <div id="main" class="col-sm-9">
      <div class="search-box sp-only">
        <div class="search-form">
          <input type="text" name="article" placeholder="キーワードを入力（記事検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->

        <div class="select-form">
          <select name="sport">
            <option value="" selected disabled>ジャンル</option>
            <option value="バスケットボール">バスケ</option>
          </select>

          <select name="order">
            <option value="新着順">新着順</option>
            <option value="人気順">人気順</option>
          </select>
        </div><!-- /.select-form -->
      </div><!-- /.search-box -->

      <div class="recent-news-box">
        <p class="head-title">新着記事<%= image_tag("/images/common/head_title_article.png", alt:"RECENT NEWS", class:"new-article-title") %></p><!-- /.head-title -->

        <div class="detail-block">
          <img src="<%= @article.image_link %>" class="thum">
          <span class="title"><%= @article.title %></span>
          <span class="media"><%= @article.media %></span>
          <span class="published"><%= @article.created_at %></span>
          <span class="name"><%= @article.player %></span>
        </div><!-- /.detail-block -->

        <span class="url"><%= link_to("続きを見る", "#{@article.original_link}", target: "_blank") %><i class="glyphicon glyphicon-chevron-right"></i></span>
      </div><!-- /.recent-news-box -->

      <div class="recent-news-box">
        <p class="head-title">新着記事<%= image_tag("/images/common/head_title_article.png", alt:"RECENT NEWS", class:"new-article-title") %></p><!-- /.head-title -->

        <!-- new_article_list -->
        <div class="article-list">
          <ul>
            <% @articles.each do |article| %>
              <li>
                <%= link_to("/article/#{article.id}") do %>
                  <img src="<%= article.image_link %>" class="thum">
                  <span class="title"><%= article.title %></span>
                  <span class="media"><%= article.media %></span>
                  <span class="published"><%= article.created_at %></span>
                  <span class="name"><%= article.player %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div><!-- /.article-list -->
        <!-- /new_article-list -->

        <div class="more-btn">
          <%= link_to("もっと見る", "/article") %><i class="glyphicon glyphicon-chevron-right"></i>
        </div><!-- /.more-btn -->
      </div><!-- /.recent-news-box -->
    </div><!-- /#main -->

    <div id="side" class="col-sm-3">
      <div class="search-box pc-only">
        <div class="search-form">
          <input type="text" name="article" placeholder="キーワードを入力（記事検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->

        <div class="select-form">
          <select name="sport">
            <option value="" selected disabled>ジャンル</option>
            <option value="バスケットボール">バスケ</option>
          </select>

          <select name="order">
            <option value="新着順">新着順</option>
            <option value="人気順">人気順</option>
          </select>
        </div><!-- /.select-form -->
      </div><!-- /.search-box -->

      <div class="pop-movie-box">

      </div><!-- /.pop-movie-box -->

      <div class="pop-news-box">

      </div><!-- /.pop-news-box -->
    </div><!-- /#side -->
  </div><!-- /.row -->
</form>
