          <div class="gellery-list">
            <ul>
              <% @gelleries.each do |gellery| %>
                <li>
                  <%= link_to("/gellery/#{@player.id}/#{gellery.id}") do %>
                    <% if gellery.image? %>
                      <%= image_tag("#{gellery.image.url}") %>
                    <% else %>
                    <% end %>
                  <% end %>
                </li>
              <% end %>
            </ul>
            <%= paginate @gelleries %>
          </div><!-- /.gellery-list -->

          <div class="back-btn">
            <%= link_to("戻る", "/player/#{@player.id}") %><i class="glyphicon glyphicon-chevron-right"></i>
          </div><!-- /.back-btn -->
        </div><!-- /.player-gellery-box -->
      </div><!-- /player-detail-area -->
    </div><!-- /#main -->

