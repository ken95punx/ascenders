<div class="row">
  <div id="side" class="col-sm-3 col-sm-push-9">
    <%= search_form_for @search, url:player_path do |f| %>
      <div class="search-box">
        <div class="search-form">
          <div class="form-group">
            <%= f.text_field :name_or_place_birth_or_alma_mater_or_league_school_or_team_or_hiragana_name_or_katakana_name_cont, placeholder: 'キーワードを入力（選手検索）', class: 'form-control' %>
          </div><!-- /.form-group -->
        </div><!-- /.search-form -->

        <div class="submit-form">
          <div><%= f.submit '検索', class: 'search-btn' %><i class="glyphicon glyphicon-search"></i></div>
        </div><!-- /.submit-form -->
      </div><!-- /.search-box -->
    <% end %>

    <!--
    <div class="pop-movie-box">
      人気動画箇所
    </div>

    <div class="pop-news-box">
      人気記事箇所
    </div>
    -->
  </div><!-- /#side -->

  <div id="main" class="col-sm-9 col-sm-pull-3">
    <div class="recent-movie-box">
      <p class="head-title">新着動画<%= image_tag("/images/common/head_title_movie.png", alt:"RECENT MOVIE", class:"new-movie-title") %></p><!-- /.head-title -->

      <div class="movie-player">
        <div class="html"><%= @movie.movie_html.html_safe %></div>
        <div class="detail">
          <div class="title"><%= @movie.title %></div>
          <div class="name">
            <%= link_to("/player/#{@movie.player_id}") do %>
              <%= @movie.player.name %>
            <% end %>
          </div><!-- /.name -->
        </div><!-- /.detail -->
      </div><!-- /.movie-player -->

      <!-- new-movie-list -->
      <div class="movie-list">
        <ul class="multiple-item">
          <% @movies.each do |movie| %>
            <li class="slide">
              <%= link_to("#{movie.id}", {method: "post", remote: true, id: "movie#{movie.id}"}) do %>
                <img src="<%= movie.movie_thum %>"  class="thum">
                <span class="title"><%= movie.title %></span>
                <span class="name"><%= movie.player.name %></span>
              <% end %>
            </li>
          <% end %>
        </ul><!-- /.multiple-item -->
      </div><!-- /.movie-list -->
      <!-- /new-movie-list -->

      <div class="more-btn">
        <%= link_to("もっと見る", "/movie") %><i class="glyphicon glyphicon-chevron-right"></i>
      </div><!-- /.more-btn -->
    </div><!-- /.recent-movie-box -->

    <div class="recent-news-box">
      <p class="head-title">新着記事<%= image_tag("/images/common/head_title_article.png", alt:"RECENT NEWS", class:"new-article-title") %></p><!-- /.head-title -->

      <div class="article-list">
        <ul>
          <% @articles.each do |article| %>
            <li>
              <%= link_to("/article/#{article.id}") do %>
                <% if article.image_link? %>
                  <%= image_tag("#{article.image_link}", class:"thum") %>
                <% else %>
                  <%= image_tag("/images/common/default_article_thum.jpg") %>
                <% end %>
                <span class="title"><%= article.title %></span>
                <span class="media"><%= article.media %></span>
                <span class="published"><%= article.created_at %></span>
                <span class="name"><%= article.player.name %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div><!-- /.article-list -->

      <div class="more-btn">
        <%= link_to("もっと見る", "/article") %><i class="glyphicon glyphicon-chevron-right"></i>
      </div><!-- /.more-btn -->
    </div><!-- /.recent-news-box -->
  </div><!-- /#main -->
</div><!-- /.row -->
