<form>
  <div class="row">
    <div id="main" class="col-sm-9">
      <div class="search-box sp-only">
        <div class="search-form">
          <input type="text" name="movie" placeholder="キーワードを入力（動画検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->

        <div class="select-form">
          <select name="sport">
            <option value="" selected disabled>ジャンル</option>
            <option value="バスケットボール">バスケ</option>
          </select>

          <select name="order">
            <option value="新着順">新着順</option>
            <option value="人気順">人気順</option>
          </select>
        </div><!-- /.select-form -->
      </div><!-- /.search-box -->

      <div class="recent-movie-box">
        <p class="head-title">新着動画<%= image_tag("/images/common/head_title_movie.png", alt:"RECENT MOVIE", class:"new-movie-title") %></p><!-- /.head-title -->

        <div class="movie-player">
          <div class="html"><%= @movie.movie_html.html_safe %></div>
          <div class="title"><%= @movie.title %></div>
          <div class="name"><%= @movie.player %></div>
        </div><!-- /.movie-player -->

        <!-- new-movie-list -->
        <div class="movie-list">
          <ul class="movie-slider">
            <% @movies.each do |movie| %>
              <li class="slide">
                <%= link_to("/movie/#{movie.id}", {method: "post", remote: true, id: "movie#{movie.id}"}) do %>
                  <img src="<%= movie.movie_thum %>"  class="thum">
                  <span class="title"><%= movie.title %></span>
                  <span class="name"><%= movie.player %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
          <%= paginate @movies %>
        </div><!-- /.movie-list -->
        <!-- /new-movie-list -->
      </div><!-- /.recent-movie-box -->
    </div><!-- /#main -->

    <div id="side" class="col-sm-3">
      <div class="search-box pc-only">
        <div class="search-form">
          <input type="text" name="movie" placeholder="キーワードを入力（動画検索）"><input type="submit" val="">
          <i class="glyphicon glyphicon-search"></i>
        </div><!-- /.search-form -->

        <div class="select-form">
          <select name="sport">
            <option value="" selected disabled>ジャンル</option>
            <option value="バスケットボール">バスケ</option>
          </select>

          <select name="order">
            <option value="新着順">新着順</option>
            <option value="人気順">人気順</option>
          </select>
        </div><!-- /.select-form -->
      </div><!-- /.search-box -->

      <div class="pop-movie-box">

      </div><!-- /.pop-movie-box -->

      <div class="pop-news-box">

      </div><!-- /.pop-news-box -->
    </div><!-- /#side -->
  </div><!-- /.row -->
</form>
