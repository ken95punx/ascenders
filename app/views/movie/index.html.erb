<%= search_form_for @search, url:movie_path do |f| %>
  <div class="row">
    <div id="main" class="col-sm-9">
      <div class="search-box sp-only">
        <div class="search-form">
          <%= f.text_field :title_or_player_name_or_player_team_or_player_hiragana_name_or_player_katakana_name_cont, placeholder: 'キーワードを入力（動画検索）', class: 'form-control' %>
        </div><!-- /.search-form -->

        <div class="select-form">
          <%= f.collection_select :sport_id_eq_any, @sports, :id, :name, :prompt => "選択してください", :include_blank => 'すべて' %>

          <select name="order">
            <option value="新着順">新着順</option>
            <option value="名前順">名前順</option>
          </select>
        </div><!-- /.select-form -->

        <div class="submit-form">
          <div><%= f.submit '検索', class: 'search-btn' %><i class="glyphicon glyphicon-search"></i></div>
        </div><!-- /.submit-form -->
      </div><!-- /.search-box -->

      <div class="recent-movie-box">
        <p class="head-title">新着動画<%= image_tag("/images/common/head_title_movie.png", alt:"RECENT MOVIE", class:"new-movie-title") %></p><!-- /.head-title -->

        <div class="movie-player">
          <div class="html"><%= @movie.movie_html.html_safe %></div>
          <div class="title"><%= @movie.title %></div>
          <div class="name"><%= @movie.player.name %></div>
        </div><!-- /.movie-player -->

        <div class="movie-list">
          <% if @result.any? %>
            <ul class="movie-slider">
              <% @result.each do |movie| %>
                <li class="slide">
                  <%= link_to("/movie/#{movie.id}", {method: "post", remote: true, id: "movie#{movie.id}"}) do %>
                    <img src="<%= movie.movie_thum %>"  class="thum">
                    <span class="title"><%= movie.title %></span>
                    <span class="name"><%= movie.player.name %></span>
                  <% end %>
                </li>
              <% end %>
            </ul>
            <%= paginate @result %>
          <% end %>

          <% if @result.nil? %>
            <ul class="movie-slider">
              <% @result.each do |movie| %>
                <li class="slide">
                  <%= link_to("/movie/#{movie.id}", {method: "post", remote: true, id: "movie#{movie.id}"}) do %>
                    <img src="<%= movie.movie_thum %>"  class="thum">
                    <span class="title"><%= movie.title %></span>
                    <span class="name"><%= movie.player.name %></span>
                  <% end %>
                </li>
              <% end %>
            </ul>
            <%= paginate @movies %>
          <% end %>
        </div><!-- /.movie-list -->
      </div><!-- /.recent-movie-box -->
    </div><!-- /#main -->

    <div id="side" class="col-sm-3">
      <div class="search-box pc-only">
        <div class="search-form">
          <%= f.text_field :title_or_player_name_or_player_team_or_player_hiragana_name_or_player_katakana_name_cont, placeholder: 'キーワードを入力（動画検索）', class: 'form-control' %>
        </div><!-- /.search-form -->

        <div class="select-form">
          <%= f.collection_select :sport_id_eq_any, @sports, :id, :name, :prompt => "選択してください", :include_blank => 'すべて' %>

          <select name="order">
            <option value="新着順">新着順</option>
            <option value="名前順">名前順</option>
          </select>
        </div><!-- /.select-form -->

        <div class="submit-form">
          <div><%= f.submit '検索', class: 'search-btn' %><i class="glyphicon glyphicon-search"></i></div>
        </div><!-- /.submit-form -->
      </div><!-- /.search-box -->

      <div class="pop-movie-box">

      </div><!-- /.pop-movie-box -->

      <div class="pop-news-box">

      </div><!-- /.pop-news-box -->
    </div><!-- /#side -->
  </div><!-- /.row -->
<% end %>
