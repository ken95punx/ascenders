$(".slide").on('click', '#movie<%= @movie.id %>', function () {
  $('.movie-player .html').html('<%= @movie.movie_html.html_safe %>');
  $('.movie-player .title').html('<%= @movie.title %>');
  $('.movie-player .name').html('<%= link_to("/player/#{@movie.player_id}") do %><%= @movie.player.name %><% end %>');
});

